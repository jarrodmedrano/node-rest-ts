<div class="col-md-4 mx-auto">
    <div class="card card-body">
        <form action="/books/add" method="POST">
            <div class="form-group">
                <input type="text" name="title" id="" class="form-control" placeholder="Book Title" autofocus required>
            </div>
            <div class="form-group">
                <input type="text" name="author" id="" class="form-control" placeholder="Book Author" required>
            </div>
            <div class="form-group">
                <input type="text" name="isbn" placeholder="isbn" class="form-control">
            </div>
            <button class="btn btn-primary btn-block">
                Save
            </button>
        </form>
    </div>
</div>